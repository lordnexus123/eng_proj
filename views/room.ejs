<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Stream</title>
    <link rel="stylesheet" href="style_room.css" />
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <script>
      const ROOM_ID = "<%= roomId %>";
    </script>
  </head>
  <body> 
    <div class="main">  
    <div class="main__left">
      <div class="videos__group">
        <div id="video-grid">

        </div>
      </div>
      <div class="options">
        <div class="options__left">
          <div id="stopVideo" class="options__button">
            <i class="video-camera"><img src="/img/video_logo.png" ></i>
          </div>
          <div id="muteButton" class="options__button">
            <i class="microphone"><img src="/img/micro_logo.png" ></i>
          </div>
        </div>
        <div class="options__right">
          <div id="inviteButton" class="options__button">
            <i class="invite-user"><img src="/img/invite_icon.png" ></i>
          </div>
        </div>
      </div>
    </div>
    <div class="main__right">
      <div class="main__chat_window">
          <div class="messages">

          </div>
      </div>
      <div class="main__message_container">
        <input id="chat_message" type="text" autocomplete="off" placeholder="Napisz wiadomość...">
        <div id="send" class="options__button">
          <i class="add_mess" aria-hidden="true"><img src="/img/mess.png" ></i>
        </div>
      </div>
    </div>
  </div>
  </body>
  <script src="/scripts/roomStr.js"></script>
</html>
